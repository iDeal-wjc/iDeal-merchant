<view class='container'>
  <view class='buttons'>
    <button class='button'>正在进行</button>
    <button class='button'>已经过期</button>
  </view>
  <view wx:for="{{dealCards}}" wx:key="dealCards">
    <view class='centercolumn' bindtap="tapCard" data-index="{{item.index}}">
      <image src="{{item.imageUrl}}" mode="scaleToFill" />
      <view class='info'>
        <view class='content'>{{item.content}}</view>
        <view class='count'>{{item.viewAndUseCount}}</view>
      </view>
    </view>
  </view>
</view>